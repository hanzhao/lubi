{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es2015", "es2016"],
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "lib/",
    "preserveConstEnums": true,
    "removeComments": false,
    "strictNullChecks": true,
    "target": "es5"
  },
  "include": [
    "node_modules/@types/**/*.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
