{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "indent": [true, "spaces", 2],
    "interface-name": [true, "never-prefix"],
    "max-classes-per-file": [false],
    "quotemark": [true, "single", "jsx-double","avoid-escape", "avoid-template"],
    "semicolon": [true, "never"]
  },
  "rulesDirectory": []
}
